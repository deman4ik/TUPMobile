                    HorizontalOptions="Fill"
           VerticalOptions="Fill"
                    DownsampleToViewSize="true"
                    Source = "{Binding CurrentItem.Url}">
                

        </ffimageloading:CachedImage>
      </Frame>
    </mr:AbsoluteLayout>

